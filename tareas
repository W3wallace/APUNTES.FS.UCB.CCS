int main() {
    string nombre, carrera;
    int edad;

    cout << "Ingrese su nombre: ";
    cin >> nombre;

    cout << "Ingrese su edad: ";
    cin >> edad;

    cout << "Ingrese su carrera: ";
    cin.ignore(); // Ignora el salto de línea pendiente de la entrada anterior
    getline(cin, carrera);  // Utiliza getline para capturar toda la línea

    cout << "Hola " << nombre << ", tienes " << edad << " años y estudias " << carrera << "." << endl;

    return 0;
}





















